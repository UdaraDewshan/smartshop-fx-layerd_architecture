<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="740.0" prefWidth="990.0" style="-fx-background-color: linear-gradient(to bottom right, #1f1c2c, #928dab);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ItemController">

    <children>

        <!-- Title -->
        <Text fill="white" layoutX="363.0" layoutY="63.0" text="Item Management">
            <font>
                <Font name="Arial Bold" size="32" />
            </font>
        </Text>

        <!-- Input Card -->
        <VBox layoutX="76.0" layoutY="90.0" prefHeight="179.0" prefWidth="838.0" spacing="12" style="-fx-background-color: #ffffff; -fx-background-radius: 16; -fx-padding: 20;">

            <HBox alignment="CENTER" spacing="15">
                <TextField fx:id="txtId" onAction="#txtIdOnAction" prefHeight="36.0" prefWidth="179.0" promptText="itemCode" style="-fx-background-radius: 8;" />
                <TextField fx:id="txtDescription" prefHeight="42.0" prefWidth="178.0" promptText="Description" style="-fx-background-radius: 8;" />
                <TextField fx:id="txtPackSize" prefHeight="42.0" prefWidth="178.0" promptText="PackSize" style="-fx-background-radius: 8;" />
                <TextField fx:id="txtUnitPrice" prefHeight="40.0" prefWidth="186.0" promptText="UnitPrice" style="-fx-background-radius: 8;" />
            </HBox>

            <HBox alignment="CENTER" spacing="15" />

            <HBox alignment="CENTER" spacing="15">
                <TextField fx:id="txtQtyOnHand" alignment="CENTER" prefHeight="35.0" prefWidth="193.0" promptText="QtyOnHand" style="-fx-background-radius: 8;" />
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#btnAddOnAction" prefHeight="38.0" prefWidth="66.0" style="-fx-background-color:#4CAF50; -fx-text-fill:white; -fx-background-radius:8;" text="Add" />
                <Button onAction="#btnUpdateOnAction" prefHeight="36.0" prefWidth="70.0" style="-fx-background-color:#2196F3; -fx-text-fill:white; -fx-background-radius:8;" text="Update" />
                <Button onAction="#btnDeleteOnAction" prefHeight="37.0" prefWidth="70.0" style="-fx-background-color:#F44336; -fx-text-fill:white; -fx-background-radius:8;" text="Delete" />
                <Button onAction="#btnClearOnAction" prefHeight="36.0" prefWidth="62.0" style="-fx-background-color:#9C27B0; -fx-text-fill:white; -fx-background-radius:8;" text="Clear" />
            </HBox>

        </VBox>

        <!-- Table Section -->
        <TableView fx:id="tblItem" layoutX="43.0" layoutY="295.0" prefHeight="306.0" prefWidth="910.0" style="-fx-background-radius:16; -fx-background-color:white;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="143.19997787475586" text="itemCode" />
                <TableColumn fx:id="colDescription" prefWidth="235.2000274658203" text="Description" />
                <TableColumn fx:id="colPackSize" prefWidth="179.20004272460938" text="PackSize" />
                <TableColumn fx:id="colUnitPrice" prefWidth="151.20001220703125" text="UnitPrice" />
                <TableColumn fx:id="colQtyOnHand" prefWidth="201.5999755859375" text="QtyOnHand" />
            </columns>
        </TableView>
        <!-- POS Bottom Navigation Bar -->
        <!-- POS Bottom Navigation Bar (Pure JavaFX, No Icons) -->
        <HBox alignment="CENTER" layoutX="43.0" layoutY="631.0" prefHeight="37.0" prefWidth="878.0" spacing="25" style="-fx-background-color: #101010; -fx-padding: 15; -fx-background-radius: 16;">

            <!-- Items -->
            <JFXButton fx:id="btnCustomer" onAction="#btnCustomerPageAction" prefHeight="70" prefWidth="160" style="-fx-background-color: #1f1f1f; -fx-text-fill: white;                       -fx-font-size: 18; -fx-background-radius: 12;" text="Customer">
                <font>
                    <Font name="System Bold" size="18" />
                </font>
            </JFXButton>

            <!-- Orders -->
            <JFXButton fx:id="btnPlaceOrder" onAction="#btnPlaceOrderAction" prefHeight="70" prefWidth="160" style="-fx-background-color: #1f1f1f; -fx-text-fill: white;                       -fx-font-size: 18; -fx-background-radius: 12;" text="PlaceOrder">
                <font>
                    <Font name="System Bold" size="18" />
                </font>
            </JFXButton>

            <!-- Back -->
            <JFXButton fx:id="btnBack" onAction="#btnBackAction" prefHeight="70" prefWidth="120" style="-fx-background-color: #300c95; -fx-text-fill: white;                       -fx-font-size: 18; -fx-background-radius: 12;" text="Back">
                <font>
                    <Font name="System Bold" size="18" />
                </font>
            </JFXButton>

        </HBox>


    </children>
</AnchorPane>
